<% flash.each do |key, value| %>
<div class="alert alert-info alert-dismissible fade show text-center" role="alert">
  <strong><%= value %></strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>
