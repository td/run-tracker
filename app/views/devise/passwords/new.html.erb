<div class="row h-100 justify-content-center align-items-center mt-4">
  <div class="card align-items-center" style="width: 18rem;">
    <div class="card-body">
      <h2 class="card-title">
        <%= t("forgot_password") %>
      </h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :required => true %>
        </div>

        <div class="actions">
          <%= f.submit t("submit"), :class => "btn btn-outline-primary mt-2" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
